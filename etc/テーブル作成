-- テーブル情報 
CREATE TABLE portfolio_works(
  id INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
  workname TEXT,
  device TEXT,
  title TEXT,
  worktext TEXT,
  soft TEXT,
  lang TEXT,
  worktype TEXT,
  season TEXT,
  worktime TEXT,
  link TEXT,
  proposal TEXT 
) ENGINE = INNODB;

